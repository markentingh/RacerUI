<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - RacerUI</title>
    <link rel="stylesheet" href="/css/app.css"/>
    <link href="https://fonts.googleapis.com/css2?family=Noto+Sans:ital,wdth,wght@0,87.5,100..900;1,87.5,100..900&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="https://fonts.googleapis.com/css2?family=Material+Symbols+Outlined:opsz,wght,FILL,GRAD@24,400,0,0" />
    @await RenderSectionAsync("Head", required: false)
</head>
<body>
    <header>
        <div class="logo"><img src="/images/raceui-logo-med.png" /></div>
        <div class="toggle for-darkmode">
            <div class="switch"></div>
        </div>
    </header>
    @RenderBody()
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
